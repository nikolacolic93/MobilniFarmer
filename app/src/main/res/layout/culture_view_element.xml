<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/adviceHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16sp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp">

        <ImageView
            android:id="@+id/listElementImg"
            android:layout_width="100sp"
            android:layout_height="100sp"

            />

        <TextView
            android:id="@+id/listElementName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22sp"
            android:layout_marginLeft="22sp"
            android:layout_gravity="center_vertical"
            android:text="RANDOM"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adviceLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        android:layout_below="@id/adviceHeader"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/adviceTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listElementImg"
            android:layout_marginTop="20sp"
            android:textSize="16sp"


            />

    </LinearLayout>

</RelativeLayout>